<h1>Log In</h1>

<%= form_tag sessions_path do %>
  <div class="field form-group">
          <%= label_tag :name %><br />
          <%= text_field_tag :name, params[:name] %>
  </div>
  <div class="field form-group">
          <%= label_tag :password %><br />
          <%= password_field_tag :password %>
  </div>
    <%= submit_tag "Log In", class: "btn btn-success" %>
<% end %>
