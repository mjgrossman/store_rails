<%= form_for @product, :html => { :multipart => true } do |f| %>
  <div class='form-group'>
    <%= f.label "Product Name" %>
    <%= f.text_field :name %>
    <%= f.label "Price" %>
    <%= f.text_field :price %>
    <%= f.label "Description"%>
    <%= f.text_field :description %>
  </div>
    <%= f.submit(:class => "btn btn-primary") %>
<% end %>
